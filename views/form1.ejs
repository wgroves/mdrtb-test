<html>
	<head>
		<link rel="stylesheet" type="text/css" href="css/home.css" />
		<link rel="stylesheet" type="text/css" href="css/stylesheet.css" />
		<link rel="stylesheet" type="text/css" href="css/login.css" />
	</head>
	<body>
		<nav id="navbar">
			<div id="nav-left">
			<h1 id="white-text">Online Portal</h1>
			</div>
			<div id="nav-right">
				<h5 id="white-text">Dashboard</h5>
				<h5 id="white-text">Update Patient</h5>
				<h5 id="white-text">New Patient</h5>
				<h5 id="white-text">Your Account</h5>
			</div>
		</nav>

		<div id="main">
			<h1>1: Identifying Information</h1>
			<form action="/form" method="post">
				<input type="hidden" name="form_number" value="1">

				<% Object.keys(errors).forEach(function(i) { %>
					<% Object.keys(data[i]).forEach(function(key) { %>
						<input type="hidden" name="<%- key %>" value="<%- data[i][key] %>" />
					<% }); %>
				<% }); %>

				<div class="form-section">
					<div class="form-group">
						<label for="last-name">Last (family) name:</label>
				    	<input type="text" name="last-name" />
					</div>

					<div class="form-group">
						<label for="first-name">First name:</label>
						<input type="text" name="first-name" />
					</div>

					<div class="form-group">
						<label for="middle">Middle name:</label>
						<input type="text" name="middle-name" />
					</div>
				</div>

				<div class="form-section">
					<div class="form-group">
						<label for="date-of-birth">Date of birth:</label>
						<input type="text" name="date-of-birth" />
					</div>
				</div>

				<div class="form-section">
					<!-- TODO auto fill date -->
					<div class="form-group">
						<label for="record-date">Record date:</label>
						<input type="text" name="record-date" readonly placeholder="TODO autofill"/>
					</div>
				</div>

				<div class="form-section">
					<label for="sex">Sex:</label>
					<div class="secondary-input">
						<div class="form-group">
							<input type="radio" name="sex" value="male" />
							<label>Male</label>
						</div>
						<div class="form-group">
							<input type="radio" name="sex" value="female" />
							<label>Female</label>
						</div>
					</div>
				</div>

				<div class="form-section">
					<div class="form-group">
						<label for="local-record-number">Local record number (optional):</label>
						<input type="text" name="local-record-number" />
					</div>
				</div>

				<div id="bottom-button-wrap">


				<div id="continue-button-wrap">
					<button id="continue-button" class="button1" type="submit">Continue</button>
				</div>
			</div>
			</form>
		</div>
	</body>
</html>
